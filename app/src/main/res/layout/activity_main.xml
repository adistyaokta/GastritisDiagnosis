<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="10dp"
    android:scrollbars="vertical">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="233dp"
            android:layout_height="267dp"
            android:layout_marginTop="10dp"
            android:padding="15dp"
            app:srcCompat="@drawable/imagewhite"
            tools:layout_conversion_absoluteHeight="187dp"
            tools:layout_conversion_absoluteWidth="186dp"
            tools:layout_editor_absoluteX="113dp"
            tools:layout_editor_absoluteY="60dp" />

        <TextView
            android:id="@+id/tv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/poppins_medium"
            android:letterSpacing="0.2"
            android:paddingBottom="0dp"
            android:text="GASTRITIS"
            android:textAlignment="center"
            android:textColor="#EEEEEE"
            android:textSize="48sp"
            android:textStyle="bold"
            tools:layout_conversion_absoluteHeight="55dp"
            tools:layout_conversion_absoluteWidth="382dp"
            tools:layout_editor_absoluteX="15dp"
            tools:layout_editor_absoluteY="252dp" />

        <TextView
            android:id="@+id/tv3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_medium"
            android:letterSpacing="0.12"
            android:text="DIAGNOSIS"
            android:textAlignment="center"
            android:textColor="#EEEEEE"
            android:textSize="48sp"
            android:textStyle="bold"
            tools:layout_conversion_absoluteHeight="80dp"
            tools:layout_conversion_absoluteWidth="382dp"
            tools:layout_editor_absoluteX="15dp"
            tools:layout_editor_absoluteY="317dp" />

        <Button
            android:id="@+id/buttonDiagnosa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="100dp"
            android:layout_marginRight="50dp"
            android:height="75dp"
            android:fontFamily="@font/poppins_medium"
            android:gravity="center|center_horizontal|center_vertical"
            android:text="Mulai Diagnosis"
            android:textAlignment="center"
            android:textColor="#053B50"
            android:textSize="20sp"
            android:textStyle="bold"
            app:cornerRadius="25dp" />

        <Button
            android:id="@+id/buttonPenyakit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:height="75dp"
            android:fontFamily="@font/poppins_medium"
            android:gravity="center|center_horizontal|center_vertical"
            android:text="Daftar Penyakit"
            android:textAlignment="center"
            android:textColor="#053B50"
            android:textSize="20sp"
            android:textStyle="bold"
            app:cornerRadius="25dp" />

        <Button
            android:id="@+id/buttonTentang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:height="75dp"
            android:fontFamily="@font/poppins_medium"
            android:gravity="center|center_horizontal|center_vertical"
            android:text="Tentang"
            android:textAlignment="center"
            android:textColor="#053B50"
            android:textSize="20sp"
            android:textStyle="bold"
            app:cornerRadius="25dp" />

        <Button
            android:id="@+id/buttonKeluar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="120dp"
            android:layout_marginRight="120dp"
            android:height="75dp"
            android:fontFamily="@font/poppins_medium"
            android:gravity="center|center_horizontal|center_vertical"
            android:text="Keluar"
            android:textAlignment="center"
            android:textColor="#053B50"
            android:textSize="20sp"
            android:textStyle="bold"
            app:cornerRadius="25dp" />


    </LinearLayout>
</ScrollView>